				<label for="bed-4">4</label>
				<br/>
				<input type="radio" id="bed-5" name="beds" value="5"/>
				<label for="bed-5">5</label>
				<br/>
				<input type="radio" id="bed-6" name="beds" value="6"/>
				<label for="bed-6">6</label>
				<br/>
				<input type="radio" id="bed-7" name="beds" value="7"/>
				<label for="bed-7">7</label>
				<br/>
				<input type="radio" id="bed-8+" name="beds" value="8+"/>
				<label for="bed-8+">8+</label>

				<br/><br/>

				<label for="bathrooms">Nombre de salles de bain :</label>
				<br/>
				<input type="radio" id="bathroom-1" name="bathrooms" value="1"/>
				<label for="bathroom-1">1</label>
				<br/>
				<input type="radio" id="bathroom-2" name="bathrooms" value="2"/>
				<label for="bathroom-2">2</label>
				<br/>
				<input type="radio" id="bathroom-3" name="bathrooms" value="3"/>
				<label for="bathroom-3">3</label>
				<br/>
				<input type="radio" id="bathroom-4" name="bathrooms" value="4"/>
				<label for="bathroom-4">4</label>
				<br/>
				<input type="radio" id="bathroom-5" name="bathrooms" value="5"/>
				<label for="bathroom-5">5</label>
				<br/>
				<input type="radio" id="bathroom-6" name="bathrooms" value="6"/>
				<label for="bathroom-6">6</label>
				<br/>
				<input type="radio" id="bathroom-7" name="bathrooms" value="7"/>
