{% extends "templatedashboard.html.twig" %}

{% block title %}Louer votre location
{% endblock %}

{% block content %}
	<div>
		<fieldset>
			<legend>Modification de votre propriété</legend>
			<form method="POST" enctype="multipart/form-data" action="{{ router.generate('propertyEdit', {'id': property.id}) }}">
				<label for="title">Titre de la propriété</label>
				<br/>
				<input type="text" id="title" name="title" value="{{ property.title }}" placeholder="Entrer le nom de la propriété"/>
				<br/>
				<label for="description">Décrivez votre propriété</label>
				<br/>
				<input type="text" id="description" name="description" value="{{ property.description }}" placeholder="Entrer la description de la propriété"/>
				<br/>
				<label for="price- night">Prix de la location</label>
				<br/>
				<input type="number" id="price-night" name="price-night" value="{{ property.priceNight }}" placeholder="Entrer le prix de la location"/>
				<br/><br>

				<label for="propertyImage">Importer les images de la location :</label><br>

				<label for="imageMain">Image principale :</label>
				<input type="file" id="imageMain" name="imageMain" accept="image/*" required onchange="previewImage(event, 'imageMainPreview')"/>
				<img id="imageMainPreview" src="{{ asset('/media/locations/' ~ propertyImages.imageMainURL) }}" alt="Aperçu de l'image principale" style="max-width: 200px;">
				<br/>

				<label for="image1">Image 1 :</label>
				<input type="file" id="image1" name="image1" accept="image/*" onchange="previewImage(event, 'image1Preview')"/>
				<img id="image1Preview" src="{{ asset('/media/locations/' ~ propertyImages.image1URL) }}" alt="Aperçu de l'image 1" style="max-width: 200px;">
				<br/>

				<label for="image2">Image 2 :</label>
				<input type="file" id="image2" name="image2" accept="image/*" onchange="previewImage(event, 'image2Preview')"/>
				<img id="image2Preview" src="{{ asset('/media/locations/' ~ propertyImages.image2URL) }}" alt="Aperçu de l'image 2" style="max-width: 200px;">
				<br/>

				<label for="image3">Image 3 :</label>
				<input type="file" id="image3" name="image3" accept="image/*" onchange="previewImage(event, 'image3Preview')"/>
				<img id="image3Preview" src="{{ asset('/media/locations/' ~ propertyImages.image3URL) }}" alt="Aperçu de l'image 3" style="max-width: 200px;">
				<br/>

				<label for="image4">Image 4 :</label>
				<input type="file" id="image4" name="image4" accept="image/*" onchange="previewImage(event, 'image4Preview')"/>
				<img id="image4Preview" src="{{ asset('/media/locations/' ~ propertyImages.image4URL) }}" alt="Aperçu de l'image 4" style="max-width: 200px;">
				<br/><br>

				<label for="property-type">Choisissez le type de propriété :</label>
				<br/>
				<select id="property-type" name="property-type">
					<option value="house" {% if propertyType.house %} selected {% endif %}>Maison</option>
					<option value="flat" {% if propertyType.flat %} selected {% endif %}>Appartement</option>
					<option value="guesthouse" {% if propertyType.guesthouse %} selected {% endif %}>Maison d'hôte</option>
					<option value="hotel" {% if propertyType.hotel %} selected {% endif %}>Hôtel</option>
				</select>

				<br/><br/>

				<label for="host-languages">Langues parlées par l'hôte :</label>
				<br/>
				<input type="checkbox" id="english" name="host-languages[]" value="anglais" {% if hostLanguage.anglais == true %} checked {% endif %}/>
				<label for="english">Anglais</label>
				<br/>
				<input type="checkbox" id="french" name="host-languages[]" value="français" {% if hostLanguage.français == true %} checked {% endif %}/>
				<label for="french">Français</label>
				<br/>
				<input type="checkbox" id="german" name="host-languages[]" value="allemand" {% if hostLanguage.allemand == true %} checked {% endif %}/>
				<label for="german">Allemand</label>
				<br/>
				<input type="checkbox" id="japanese" name="host-languages[]" value="japonais" {% if hostLanguage.japonais == true %} checked {% endif %}/>
				<label for="japanese">Japonais</label>
				<br/>
				<input type="checkbox" id="italian" name="host-languages[]" value="italien" {% if hostLanguage.italien == true %} checked {% endif %}/>
				<label for="italian">Italien</label>
				<br/>
				<input type="checkbox" id="russian" name="host-languages[]" value="russe" {% if hostLanguage.russe == true %} checked {% endif %}/>
				<label for="russian">Russe</label>
				<br/>
				<input type="checkbox" id="spanish" name="host-languages[]" value="espagnol" {% if hostLanguage.espagnol == true %} checked {% endif %}/>
				<label for="spanish">Espagnol</label>
				<br/>
				<input type="checkbox" id="chinese" name="host-languages[]" value="chinois" {% if hostLanguage.chinois == true %} checked {% endif %}/>
				<label for="chinese">Chinois</label>
				<br/>
				<input type="checkbox" id="arabic" name="host-languages[]" value="arabe" {% if hostLanguage.arabe == true %} checked {% endif %}/>
				<label for="arabic">Arabe</label>
				<br/><br/>

				<label for="house-rules">Règlement intérieur :</label>
				<br/>
				<label for="check-in-time">Heure d'arrivée :</label>
				<input type="time" id="check-in-time" name="check-in-time" value="{{ houseRules.checkInTime|date('H:i') }}" required/>
				<br/>

				<label for="check-out-time">Heure de départ :</label>
				<input type="time" id="check-out-time" name="check-out-time" value="{{ houseRules.checkOutTime|date('H:i') }}" required/>
				<br/>

				<label for="max-guests">Nombre maximum d'invités :</label>
				<input type="number" id="max-guests" name="max-guests" value="{{ houseRules.maxGuests }}" required/>
				<br/><br/>


				<label for="property-amenities">Pièces clées de la propriété :</label>
				<br/>
				<label for="bedrooms">Nombre de chambres :</label>
				<br/>
				{% for i in 1..8 %}
					<input type="radio" id="bedroom-{{ i }}" name="bedrooms" value="{{ i }}" {{ propertyAmenities.bedrooms == i ? 'checked' : '' }}/>
					<label for="bedroom-{{ i }}">{{ i }}</label>
					<br/>
				{% endfor %}
				<input type="radio" id="bedroom-8+" name="bedrooms" value="8+" {{ propertyAmenities.bedrooms >= 8 ? 'checked' : '' }}/>
				<label for="bedroom-8+">8+</label>

				<br/><br/>

				<label for="beds">Nombre de lits :</label>
				<br/>
				{% for i in 1..8 %}
					<input type="radio" id="bed-{{ i }}" name="beds" value="{{ i }}" {{ propertyAmenities.beds == i ? 'checked' : '' }}/>
					<label for="bed-{{ i }}">{{ i }}</label>
					<br/>
				{% endfor %}
				<input type="radio" id="bed-8+" name="beds" value="8+" {{ propertyAmenities.beds >= 8 ? 'checked' : '' }}/>
				<label for="bed-8+">8+</label>

				<br/><br/>

				<label for="bathrooms">Nombre de salles de bain :</label>
				<br/>
				{% for i in 1..8 %}
					<input type="radio" id="bathroom-{{ i }}" name="bathrooms" value="{{ i }}" {{ propertyAmenities.bathrooms == i ? 'checked' : '' }}/>
					<label for="bathroom-{{ i }}">{{ i }}</label>
					<br/>
				{% endfor %}
				<input type="radio" id="bathroom-8+" name="bathrooms" value="8+" {{ propertyAmenities.bathrooms >= 8 ? 'checked' : '' }}/>
				<label for="bathroom-8+">8+</label>

				<br/><br/>

				<label for="toilets">Nombre de toilettes :</label>
				<br/>
				{% for i in 1..8 %}
					<input type="radio" id="toilet-{{ i }}" name="toilets" value="{{ i }}" {{ propertyAmenities.toilets == i ? 'checked' : '' }}/>
					<label for="toilet-{{ i }}">{{ i }}</label>
					<br/>
				{% endfor %}
				<input type="radio" id="toilet-8+" name="toilets" value="8+" {{ propertyAmenities.toilets >= 8 ? 'checked' : '' }}/>
				<label for="toilet-8+">8+</label>
				<br/><br/>


				<label for="accommodation-types">Equipements disponibles :</label>
				<br/>
				<input type="checkbox" id="piscine" name="accommodation-types[]" value="piscine" {% if accommodationType.piscine == true %} checked {% endif %}/>
				<label for="piscine">Piscine</label>
				<br/>
				<input type="checkbox" id="parkingGratuit" name="accommodation-types[]" value="parkingGratuit" {% if accommodationType.parkingGratuit == true %} checked {% endif %}/>
				<label for="parkingGratuit">Parking gratuit</label>
				<br/>
				<input type="checkbox" id="jacuzzi" name="accommodation-types[]" value="jacuzzi" {% if accommodationType.jacuzzi == true %} checked {% endif %}/>
				<label for="jacuzzi">Jacuzzi</label>
				<br/>
				<input type="checkbox" id="wifi" name="accommodation-types[]" value="wifi" {% if accommodationType.wifi == true %} checked {% endif %}/>
				<label for="wifi">Wifi</label>
				<br/>
				<input type="checkbox" id="laveLinge" name="accommodation-types[]" value="laveLinge" {% if accommodationType.laveLinge == true %} checked {% endif %}/>
				<label for="laveLinge">Lave-linge</label>
				<br/>
				<input type="checkbox" id="secheLinge" name="accommodation-types[]" value="secheLinge" {% if accommodationType.secheLinge == true %} checked {% endif %}/>
				<label for="secheLinge">Sèche-linge</label>
				<br/>
				<input type="checkbox" id="climatisation" name="accommodation-types[]" value="climatisation" {% if accommodationType.climatisation == true %} checked {% endif %}/>
				<label for="climatisation">Climatisation</label>
				<br/>
				<input type="checkbox" id="chauffage" name="accommodation-types[]" value="chauffage" {% if accommodationType.chauffage == true %} checked {% endif %}/>
				<label for="chauffage">Chauffage</label>
				<br/>
				<input type="checkbox" id="espaceTravailDedie" name="accommodation-types[]" value="espaceTravailDedie" {% if accommodationType.espaceTravailDedie == true %} checked {% endif %}/>
				<label for="espaceTravailDedie">Espace de travail dédié</label>
				<br/>
				<input type="checkbox" id="television" name="accommodation-types[]" value="television" {% if accommodationType.television == true %} checked {% endif %}/>
				<label for="television">Télévision</label>
				<br/>
				<input type="checkbox" id="secheCheveux" name="accommodation-types[]" value="secheCheveux" {% if accommodationType.secheCheveux == true %} checked {% endif %}/>
				<label for="secheCheveux">Sèche-cheveux</label>
				<br/>
				<input type="checkbox" id="ferRepasser" name="accommodation-types[]" value="ferRepasser" {% if accommodationType.ferRepasser == true %} checked {% endif %}/>
				<label for="ferRepasser">Fer à repasser</label>
				<br/>
				<input type="checkbox" id="stationRechargeVehiElectriques" name="accommodation-types[]" value="stationRechargeVehiElectriques" {% if accommodationType.stationRechargeVehiElectriques == true %} checked {% endif %}/>
				<label for="stationRechargeVehiElectriques">Station de recharge pour véhicules électriques</label>
				<br/>
				<input type="checkbox" id="litBebe" name="accommodation-types[]" value="litBebe" {% if accommodationType.litBebe == true %} checked {% endif %}/>
				<label for="litBebe">Lit bébé</label>
				<br/>
				<input type="checkbox" id="salleSport" name="accommodation-types[]" value="salleSport" {% if accommodationType.salleSport == true %} checked {% endif %}/>
				<label for="salleSport">Salle de sport</label>
				<br/>
				<input type="checkbox" id="barbecue" name="accommodation-types[]" value="barbecue" {% if accommodationType.barbecue == true %} checked {% endif %}/>
				<label for="barbecue">Barbecue</label>
				<br/>
				<input type="checkbox" id="petitDejeuner" name="accommodation-types[]" value="petitDejeuner" {% if accommodationType.petitDejeuner == true %} checked {% endif %}/>
				<label for="petitDejeuner">Petit déjeuner</label>
				<br/>
				<input type="checkbox" id="cheminee" name="accommodation-types[]" value="cheminee" {% if accommodationType.cheminee == true %} checked {% endif %}/>
				<label for="cheminee">Cheminée</label>
				<br/>
				<input type="checkbox" id="logementFumeur" name="accommodation-types[]" value="logementFumeur" {% if accommodationType.logementFumeur == true %} checked {% endif %}/>
				<label for="logementFumeur">Logement fumeur</label>
				<br/>
				<input type="checkbox" id="detecteurFumee" name="accommodation-types[]" value="detecteurFumee" {% if accommodationType.detecteurFumee == true %} checked {% endif %}/>
				<label for="detecteurFumee">Détecteur de fumée</label>
				<br/>
				<input type="checkbox" id="detecteurMonoxyDeCarbone" name="accommodation-types[]" value="detecteurMonoxyDeCarbone" {% if accommodationType.detecteurMonoxyDeCarbone == true %} checked {% endif %}/>
				<label for="detecteurMonoxyDeCarbone">Détecteur de monoxyde de carbone</label>
				<br/><br/>


				<label for="tags">Choisissez vos tags :</label>
				<br/>
				{% for tag in tags %}
					<input type="checkbox" id="{{ tag.name|lower }}" name="tags[]" value="{{ tag.id }}" {% if tag.tagId in selectedTags %} checked {% endif %}/>
					<label for="{{ tag.name|lower }}">
						<img src="{{ asset('/media/icons/tag/' ~ tag.picto) }}" alt="{{ tag.type }}"/>
						{{ tag.type }}
					</label>
					<br/>
				{% endfor %}


				<input type="submit" name="submit" value="Modifier"/>
			</form>
		</fieldset>
	</div>
{% endblock %}

{% block javascript %}
	<script src="{{ asset('/js/fred.js') }}"></script>
{% endblock %}
