{% extends "templatedashboard.html.twig" %}

{% block title %}Louer votre location
{% endblock %}

{% block content %}
	<div>
		<fieldset>
			<legend>Modification de votre propriété</legend>
			<form method="POST" action="{{ router.generate('propertyEdit', {'id': property.id}) }}">
				<label for="title">Titre de la propriété</label>
				<br/>
				<input type="text" id="title" name="title" value="{{ property.title }}" placeholder="Entrer le nom de la propriété"/>
				<br/>
				<label for="description">Décrivez votre propriété</label>
				<br/>
				<input type="text" id="description" name="description" value="{{ property.description }}" placeholder="Entrer la description de la propriété"/>
				<br/>
				<label for="price- night">Prix de la location</label>
				<br/>
				<input type="number" id="price-night" name="price-night" value="{{ property.priceNight }}" placeholder="Entrer le prix de la location"/>
				<br/><br>

				<label for="propertyImage">Importer les images de la location :</label><br>

				<label for="imageMain">Image principale :</label>
				<input type="file" id="imageMain" name="imageMain" accept="image/*" required onchange="previewImage(event, 'imageMainPreview')"/>
				<img id="imageMainPreview" src="#" alt="Aperçu de l'image principale" style="max-width: 200px; display: none;">
				<br/>

				<label for="image1">Image 1 :</label>
				<input type="file" id="image1" name="image1" accept="image/*" onchange="previewImage(event, 'image1Preview')"/>
				<img id="image1Preview" src="#" alt="Aperçu de l'image 1" style="max-width: 200px; display: none;">
				<br/>

				<label for="image2">Image 2 :</label>
				<input type="file" id="image2" name="image2" accept="image/*" onchange="previewImage(event, 'image2Preview')"/>
				<img id="image2Preview" src="#" alt="Aperçu de l'image 2" style="max-width: 200px; display: none;">
				<br/>

				<label for="image3">Image 3 :</label>
				<input type="file" id="image3" name="image3" accept="image/*" onchange="previewImage(event, 'image3Preview')"/>
				<img id="image3Preview" src="#" alt="Aperçu de l'image 3" style="max-width: 200px; display: none;">
				<br/>

				<label for="image4">Image 4 :</label>
				<input type="file" id="image4" name="image4" accept="image/*" onchange="previewImage(event, 'image4Preview')"/>
				<img id="image4Preview" src="#" alt="Aperçu de l'image 4" style="max-width: 200px; display: none;">
				<br/><br>

				<label for="property-type">Choisissez le type de propriété :</label>
				<br/>
				<select id="property-type" name="property-type">
					<option value="house" {% if property.propertyType.house %} selected {% endif %}>Maison</option>
					<option value="flat" {% if property.propertyType.flat %} selected {% endif %}>Appartement</option>
					<option value="guesthouse" {% if property.propertyType.guesthouse %} selected {% endif %}>Maison d'hôte</option>
					<option value="hotel" {% if property.propertyType.hotel %} selected {% endif %}>Hôtel</option>
				</select>

				<br/><br/>

				<label for="host-languages">Langues parlées par l'hôte :</label>
				<br/>
				<input type="checkbox" id="english" name="host-languages[]" value="anglais" {% if property.host_languages is defined and 'english' in property.host_languages %} checked {% endif %}/>
				<label for="english">Anglais</label>
				<br/>
				<input type="checkbox" id="french" name="host-languages[]" value="français" {% if property.host_languages is defined and 'french' in property.host_languages %} checked {% endif %}/>
				<label for="french">Français</label>
				<br/>
				<input type="checkbox" id="german" name="host-languages[]" value="allemand" {% if property.host_languages is defined and 'german' in property.host_languages %} checked {% endif %}/>
				<label for="german">Allemand</label>
				<br/>
				<input type="checkbox" id="japanese" name="host-languages[]" value="japonais" {% if property.host_languages is defined and 'japanese' in property.host_languages %} checked {% endif %}/>
				<label for="japanese">Japonais</label>
				<br/>
				<input type="checkbox" id="italian" name="host-languages[]" value="italien" {% if property.host_languages is defined and 'italian' in property.host_languages %} checked {% endif %}/>
				<label for="italian">Italien</label>
				<br/>
				<input type="checkbox" id="russian" name="host-languages[]" value="russe" {% if property.host_languages is defined and 'russian' in property.host_languages %} checked {% endif %}/>
				<label for="russian">Russe</label>
				<br/>
				<input type="checkbox" id="spanish" name="host-languages[]" value="espagnol" {% if property.host_languages is defined and 'panish' in property.host_languages %} checked {% endif %}/>
				<label for="spanish">Espagnol</label>
				<br/>
				<input type="checkbox" id="chinese" name="host-languages[]" value="chinois" {% if property.host_languages is defined and 'chinese' in property.host_languages %} checked {% endif %}/>
				<label for="chinese">Chinois</label>
				<br/>
				<input type="checkbox" id="arabic" name="host-languages[]" value="arabe" {% if property.host_languages is defined and 'arabic' in property.host_languages %} checked {% endif %}/>
				<label for="arabic">Arabe</label>
				<br/><br/>

				<label for="accommodation-types">Règlement intérieur :</label>
				<br/>
				<label for="check-in-time">Heure d'arrivée :</label>
				<input type="time" id="check-in-time" name="check-in-time" required/>
				<br/>

				<label for="check-out-time">Heure de départ :</label>
				<input type="time" id="check-out-time" name="check-out-time" required/>
				<br/>

				<label for="max-guests">Nombre maximum d'invités :</label>
				<input type="number" id="max-guests" name="max-guests" required/>
				<br/><br/>

				<label for="property-amenities">Pièces clées de la propriété :</label>
				<br/>
				<label for="bedrooms">Nombre de chambres :</label>
				<br/>
