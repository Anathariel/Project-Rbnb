				<input type="radio" id="toilet-8+" name="toilets" value="8+"/>
				<label for="toilet-8+">8+</label>
				<br/><br/>

				<label for="accommodation-types">Equipements disponibles :</label>
				<br/>
				<input type="checkbox" id="piscine" name="accommodation-types[]" value="piscine"/>
				<label for="piscine">Piscine</label>
				<br/>
				<input type="checkbox" id="parkingGratuit" name="accommodation-types[]" value="parkingGratuit"/>
				<label for="parkingGratuit">Parking gratuit</label>
				<br/>
				<input type="checkbox" id="jacuzzi" name="accommodation-types[]" value="jacuzzi"/>
				<label for="jacuzzi">Jacuzzi</label>
				<br/>
				<input type="checkbox" id="wifi" name="accommodation-types[]" value="wifi"/>
