{% extends "template.html.twig" %}

{% block title %}
	Rbnb
{% endblock %}

{% block content %}
	<section id="registration" class="limit-size">
		<div class="form-container">
			<div id="register">
				<h2>Inscrivez-vous</h2>
				<form method="POST" action="{{ path('register') }}">

					<label for="firstName">Prénom*</label>
					<input type="text" id="firstName" name="firstName" placeholder="Votre prénom ici">

					<label for="lastName">Nom*</label>
					<input type="text" id="lastName" name="lastName" placeholder="Votre nom ici">

					<label for="email">Email*</label>
					<input type="email" id="email" name="email" placeholder="Votre email ici">

					<label for="password">Mot de passe*</label>
					<input type="password" id="password" name="password" placeholder="Insérez votre mot de passe (8 caractères minimum)">

					<button type="submit">S'inscrire</button>
				</form>
			</div>

			<div id="connect">
				<h2>Bienvenue</h2>
				<form action="{{ path('login') }}" method="POST">

					<label for="email">Email :</label>
					<input type="email" id="email" name="email" placeholder="Votre email ici">

					<label for="password">Password :</label>
					<input type="password" id="password" name="password" placeholder="Mot de passe">

					<input type="checkbox">
					<p>Se souvenir de cet ordinateur pendant 30 jours</p>
					<a href="#">Mot de passe oublié ?</a>

					<button type="submit">Se connecter</button>
				</form>
			</div>
		</div>

    <div class="intros-container">
		<div class="intro-control signin-intro">
		<button class="btn" id="signIn">Sign In</button>
		</div>
		<div class="intro-control signup-intro">
		<button class="btn" id="signUp">Sign Up</button>
		</div>
	</div>
</section>{% endblock %}
