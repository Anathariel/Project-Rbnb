{% extends "template.html.twig" %}

{% block title %} Lorem, ipsum dolor {% endblock %}

{% block content %}

<div id="register">
    <fieldset>
        <legend>Register</legend>

        <form method="POST" action="{{ path('register') }}">

            <label for="firstName">firstName :</label>
            <input type="text" id="firstName" name="firstName" placeholder="Your firstName here">

            <label for="lastName">lastName :</label>
            <input type="text" id="lastName" name="lastName" placeholder="Your lastName here">

            <label for="email">Email :</label>
            <input type="email" id="email" name="email" placeholder="Your email adress here">

            <label for="password">Password :</label>
            <input type="password" id="password" name="password" placeholder="password">

            <input type="submit" value="Sign Up">
        </form>
    </fieldset>
</div>

<div id="connect">
    <fieldset>
        <legend>Sign In</legend>

        <form action="{{ path('login') }}" method="POST">

            <label for="email">Email :</label>
            <input type="email" id="email" name="email" placeholder="Your email adress here">

            <label for="password">Password :</label>
            <input type="password" id="password" name="password" placeholder="password">

            <input type="submit" value="Sign In">
        </form>
    </fieldset>
</div>
	
{% endblock %}