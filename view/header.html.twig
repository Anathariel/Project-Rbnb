<header class="header-main">
	<div class="header-content">
		<div id="logo">
			<a href="{{ path('home') }}">
				<img src="{{ asset('/media/icons/logoname.svg') }}" alt="Logo">
			</a>
		</div>

		<div id="container-searchbar">
			<div id="desktop-searchbar" class="default-state">
					<div id="searchbar">
						<div class="search-element separation">
							<p>N'importe où</p>
						</div>
						<div class="search-element separation">
							<p>Une semaine</p>
						</div>
						<div class="search-element">
							<p>Ajouter des voyageurs</p>
						</div>
						<button>
							<img src="{{ asset('/media/icons/search.svg') }}" alt="Icône recherche">
						</button>
					</div>
			</div>
		</div>

		<div id="user">
			{% if session.connect %}
				<a href="{{ path('dashboard') }}"><img src="{{ asset('/media/icons/user.svg') }}" alt="Dashboard utilisateur"></a>
			{% else %}
				<a href="{{ path('register') }}"><img src="{{ asset('/media/icons/user.svg') }}" alt="Se connecter ou s'inscrire "></a>
			{% endif %}
		</div>
	</div>

	<form action="{{ path('search') }}" method="GET" id="search-form">	
		<div class="expanded-state">
			<div id="searchbar">
				<div class="search-element destination-searchbar separation">
					<p>Destination</p>
					<input type="text" name="search" placeholder="Rechercher une destination" id="input-search">
				</div>
				<div class="separation calendar">
					<div class="arrival-searchbar">
									<p>Arrivée</p>
									<input type="text" name="" placeholder="Quand ?">
					</div>
					<div class="departure-searchbar">
									<p>Départ</p>
									<input type="text" name="" placeholder="Quand ?">
					</div>
				</div>
				<div class="search-element end-searchbar">
					<div class="traveller-searchbar">
						<p>Voyageurs</p>
						<input type="text" name="" placeholder="Ajouter des voyageurs">
					</div>			
					<button type="submit" name="submit">
						<img src="{{ asset('/media/icons/search.svg') }}" alt="Icône recherche">
						<p>Rechercher</p>
					</button>
				</div>
			</div>
		</div>
	</form>
</header>
