{% extends "templatedashboard.html.twig" %}

{% block title %}Modifier {{ article.title }}
{% endblock %}

{% block content %}
<section id="article-add" class="update-form-dashboard">
{% if message %}
    <div id="message" data-content="{{ message }}"></div>
{% endif %}

    <h2>Modifier votre article : {{ article.title }}</h2>

    <form  method="post" action="action="{{ router.generate('editArticle', {'id': article.articleId}) }}"" enctype="multipart/form-data">
    {# action="{{ router.generate('editArticle', {'uid': article.articleId}) }}" #}
    {# {{ path('editArticle') }} #}

        <label for="title">Titre :</label>
        <input type="text" name="title" id="title" value="{{ article.title}}" required>

        {# <label for="image">Image :</label>
        <input type="file" name="image" id="image"> #}

        <label for="extract">Extrait :</label>
        <textarea name="extract" id="extract" cols="50" rows="5" value="{{ article.extract }}" required></textarea>

        <label for="content">Contenu :</label>
        <textarea name="content" id="content" cols="100" rows="10" value="{{ article.content }}" required></textarea>

        <button type="submit" name="submit" class="main-dash-button-style">
        <span>Cr√©er</span>
        </button>
    </form>
</section>
{% endblock %}