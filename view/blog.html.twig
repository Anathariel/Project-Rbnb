{% extends "template.html.twig" %}

{% block title %}Bienvenue sur Loca'R
{% endblock %}

{% block content %}

	<!-- ---------- SECTION - BLOG ---------- -->
	<a href="{{ path('editArticle')}}">Modifier mon article</a>

<section id="section-blog">
  <h2>Notre Journal</h2>

  
  <p class="sub-title-section">Les clients partagent leur expérience, leur télétravail et le choix de leur location.</p>
  
  <div id="container-section-blog">
	{% for article in allArticles %}  
    	<div class="card-blog">
      		<div class="card-blog-top">
        		<figure id="pict-aticle-1">
          			<img src="{{ asset('/media/blog/' ~ article.image) }}" alt="{{ article.title }}">
        		</figure>
      		</div>

      		<div class="card-blog-bottom">
        		<h4>{{ article.title }}</h4>
        		<p>{{ article.content }}</p>
        		<p class="date-article-blog">
				<i>{{ article.date }}</i></p>
        		<a href="{{ path('basearticle') }}/{{ article.articleId}}"> ↗</a>
      		</div>
    	</div>
	{% endfor %}
  </div>
</section>
{% endblock %}
